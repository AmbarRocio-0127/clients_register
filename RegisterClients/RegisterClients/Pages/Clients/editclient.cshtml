@page
@model RegisterClients.Pages.Clients.editclientModel
@{
}


<br />
<h2>Editing the Client</h2>

@if (Model.Error_.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fadde show' role="alert">
        <strong>@Model.Error_ </strong>
        <button type='button' class='btn-close' data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.ClientInformation_.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.ClientInformation_.name">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.ClientInformation_.email">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.ClientInformation_.Phone">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.ClientInformation_.address">
        </div>

        @if (Model.Succeedprocess.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fadde show' role="alert">
                <strong>@Model.Succeedprocess</strong>
                <button type='button' class='btn-close' data-bs-dismiss="alert" aria-label="Closr"></button>
            </div>
        }

        <br /><br /><br />
        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
            </div>
        </div>

    </div>
</form>